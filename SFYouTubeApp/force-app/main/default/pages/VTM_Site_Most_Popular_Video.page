<apex:page standardStylesheets="false" showheader="false" sidebar="false" controller="VTM_YouTubeVideoController">
    <section class="poca-latest-epiosodes section-padding-80">
        <div class="container">
          <div class="row">
            <!-- Section Heading -->
            <div class="col-12">
              <div class="section-heading text-center">
                <h2>Most Popular Videos</h2>
                <div class="line"></div>
              </div>
            </div>
          </div>
        </div>
    
        <!-- Projects Menu -->
        <div class="container">
          <div class="poca-projects-menu mb-30 wow fadeInUp" data-wow-delay="0.3s">
            <div class="text-center portfolio-menu">
              <!--button class="btn active" data-filter=".entre">Vietnam</button>
              <button class="btn" data-filter=".media">United States</button>
              <button class="btn" data-filter=".tech">France</button>
              <button class="btn" data-filter=".tutor">Italia</button-->
              <apex:form id="frmFilter">
              <apex:commandButton action="{!listPopularVideosByCountry}" value="Vietnam" styleClass="btn active" id="btn1" reRender="listPopularVideo, frmFilter">
                  <apex:param name="regionCode" value="VN" assignTo="{!regionCode}"/>
              </apex:commandButton>

              <apex:commandButton action="{!listPopularVideosByCountry}" value="United States" styleClass="btn" id="btn2" reRender="listPopularVideo">
                  <apex:param name="regionCode" value="US" assignTo="{!regionCode}"/>
              </apex:commandButton>

              <apex:commandButton action="{!listPopularVideosByCountry}" value="France" styleClass="btn" id="btn3" reRender="listPopularVideo">
                  <apex:param name="regionCode" value="FR" assignTo="{!regionCode}"/>
              </apex:commandButton>

              <apex:commandButton action="{!listPopularVideosByCountry}" value="Italia" styleClass="btn" id="btn4" reRender="listPopularVideo">
                  <apex:param name="regionCode" value="IT" assignTo="{!regionCode}"/>
              </apex:commandButton>
              </apex:form>
            </div>
          </div>
        </div>
    
        <div class="container">
          <div class="row poca-portfolio" id="listPopularVideo">
            
            <!-- List Vietnam Videos -->
            <apex:repeat value="{!items}" var="item" id="theItem">
                <apex:outputLink value="http://www.youtube.com/watch?v={!item.id}" target="_blank">{!item.snippet.title} test</apex:outputLink>
            </apex:repeat>
            <!-- List Vietnam Videos -->

            
    
          </div>
        </div>
    
        <div class="container">
          <div class="row">
            <div class="col-12 text-center">
              <a href="#" class="btn poca-btn mt-70">Load More</a>
            </div>
          </div>
        </div>
      </section>
</apex:page>